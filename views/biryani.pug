extends layout

block content
  h1= title
  - let create = `dispatch(\"/biryani/create\")`
  button.btn( class="btn-primary ml-1", onclick= create) Create
  - var biryanis = results
    div(class = 'container-fluid')
      div(class = 'row m-1')
        each item in biryanis
         - let destination = `dispatch(\"/biryani/update?id=${item._id}\")`
         - let detail = `dispatch(\"/biryani/detail?id=${item._id}\")`
         - let d = `dispatch(\"/biryani/delete?id=${item._id}\")`
          div(class="row-sm-2", class="m-1") Item #{item.biryaniType  }(#{item.biryaniFlavor}) is #{item.biryaniPrice}
           button.btn( class="btn-primary ml-1", onclick= destination) Update
           button.btn( class="btn-primary ml-1", onclick= detail) Detail
           button.btn( class="btn-primary ml-1", onclick= d) Delete

    script.
     function dispatch(path){
      window.location.href=path
     }