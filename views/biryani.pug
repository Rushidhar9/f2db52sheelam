extends layout

block content
  h1= title
  - var biryanis = results
    div(class = 'container-fluid')
      div(class = 'row')
        each item,index in biryanis 
          div(class="col-sm-2", onClick=`buy(${index})`) BiryaniType : #{item["biryaniType"]} <br> BiryaniFlavor : #{item["biryaniFlavor"]} <br> BiryaniPrice: #{item["biryaniPrice"]}
          script.
            function buy(value) {
              alert(`You purchased item ${value}`)
            }